# Add ./lib to the load path
$LOAD_PATH << File.expand_path( '../../lib' )

require 'statistrano'

define_deployment "remote", :branches do |c|
  c.build_task = 'remote:copy'
  c.remote = 'digitalocean'
  c.local_dir = "build"
  c.remote_dir = '/var/www/testing.statistrano/branches_site'
end

define_deployment "local", :branches do |c|
	c.build_task = 'remote:copy'
	c.remote = 'localhost'
	c.local_dir = 'build'
	c.remote_dir = File.join( Dir.pwd, 'deployment' )
end

namespace :remote do
  task :copy do
    `cp -r source/ build/`
  end
end

task :default do
  p "hello default"
end